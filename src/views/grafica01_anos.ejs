<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Muertes por contaminantes</title>
    <%- include('../partials/head.html')%>
  </head>
  <body>
    <%- include('../partials/navigation.html')%>
    <br><br>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">

    </p>
</figure>

<style type="text/css">

.highcharts-figure, .highcharts-data-table table {
    min-width: 500px;
    max-width: 1500px;
    min-height: 800px;
    max-height: 1800px;
    margin: 1em auto;
}

.highcharts-data-table table {
	font-family: Verdana, sans-serif;
	border-collapse: collapse;
	border: 1px solid #EBEBEB;
	margin: 10px auto;
	text-align: center;
	width: 100%;
	max-width: 500px;
}
.highcharts-data-table caption {
    padding: 1em 0;
    font-size: 1.2em;
    color: #555;
}
.highcharts-data-table th {
	font-weight: 600;
    padding: 0.5em;
}
.highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
    padding: 0.5em;
}
.highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
    background: #f8f8f8;
}
.highcharts-data-table tr:hover {
    background: #f1f7ff;
}
#footer{
    text-align: center;
}
</style>
<script type="text/javascript">
Highcharts.chart('container', {

    title: {
        text: 'Years of life lost by pollutants by 100000 inhabitants'
    },

    subtitle: {
        text: 'Source: <a href="https://www.eea.europa.eu/publications/air-quality-in-europe-2020-report">Air quality in Europe â€” 2020 report</a><br><br>Datum by 2018'
    },

    yAxis: {
        title: {
            text: 'Number of years of life lost by contaminant'
        }
    },

    xAxis: {

    categories: [
               <% for(var i=0; i < anos_perdidos.length; i++) { %>
                  '<%= anos_perdidos[i].Country %>',
               <% } %>
            ]
    },

    series: [{
        name: 'PM2.5',
        data: [
          <% for(var i=0; i < anos_perdidos.length; i++) { %>
             <%= anos_perdidos[i].YLL_Hab_PM25 %>,
          <% } %>
        ]
    }, {
        name: 'NO2',
        data: [
          <% for(var i=0; i < anos_perdidos.length; i++) { %>
             <%= anos_perdidos[i].YLL_Hab_NO2 %>,
          <% } %>
        ]
    }, {
        name: 'O3',
        data: [
          <% for(var i=0; i < anos_perdidos.length; i++) { %>
             <%= anos_perdidos[i].YLL_Hab_O3 %>,
          <% } %>
        ]
    }],
});
    responsive: {
        rules: [{
            condition: {
                maxWidth: 1000
            },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }
</script>

</body>
<div id="footer">
    <footer class="mt-auto text-white-50">
        <tr>
        <td colspan="2">
            <br>
            <img src="images/pie.png" alt="">
        </td>
        </tr>
    </footer>
</div> 
</html>
